<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_s4a_main"
    android:orientation="vertical"
    android:padding="@dimen/padding_spacing_dp16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_s4a_card"
        android:orientation="vertical"
        android:padding="@dimen/padding_spacing_dp16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/s4a_support_title"
            android:textColor="@color/s4a_text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_spacing_dp4"
            android:text="@string/s4a_support_subtitle"
            android:textColor="@color/s4a_text_secondary"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_spacing_dp12"
            android:background="@drawable/bg_s4a_chip"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/padding_spacing_dp12"
            android:paddingVertical="@dimen/padding_spacing_dp8"
            android:text="@string/s4a_support_faq"
            android:textColor="@color/s4a_text_primary"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_spacing_dp8"
            android:background="@drawable/bg_s4a_chip"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/padding_spacing_dp12"
            android:paddingVertical="@dimen/padding_spacing_dp8"
            android:text="@string/s4a_support_contact"
            android:textColor="@color/s4a_text_primary"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>
